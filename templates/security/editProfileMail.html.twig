{% extends 'base.html.twig' %}
{% block body %}
    <section class="row edit-profil z-depth-2">
        <article class="col s12 m12 l6 offset-l3 ">
            <h1 class="center">Modifier votre e-mail</h1>
            <div>
                <p>Adresse e-mail actuelle : {{ user.email }}</p>
            </div>
            {{ form_start(form) }}
            <div class="input-field">
                {{ form_label(form.newEmail, 'Votre nouvelle adresse e-mail') }}
                {{ form_widget(form.newEmail) }}
                {{ form_errors(form.newEmail) }}
            </div>
            <div class="center">
                {{ form_widget(form.valider) }}
            </div>
            {{ form_end(form) }}
        </article>
    </section>
{% endblock %}